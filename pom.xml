        <repository>
            <id>hip-snapshots</id>
            <url>https://nexus.spms.min-saude.pt/repository/hip-snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>
        </repository>
    </repositories>  -->

</project>